{
  "id": "openclaw-todo",
  "name": "OpenClaw TODO",
  "version": "0.1.1",
  "description": "Manage workspace TODO.md via commands and expose TODO status as a tool. Optional brain logging.",
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean", "default": true },
      "todoFile": {
        "type": "string",
        "default": "~/.openclaw/workspace/TODO.md",
        "description": "Path to TODO.md"
      },
      "brainLog": {
        "type": "boolean",
        "default": true,
        "description": "If true, writes a short note to brain memory on add/done"
      },
      "brainStorePath": {
        "type": "string",
        "default": "~/.openclaw/workspace/memory/brain-memory.jsonl",
        "description": "Path to brain-memory.jsonl"
      },
      "maxListItems": { "type": "number", "default": 30, "minimum": 5, "maximum": 200 }
    }
  }
}
